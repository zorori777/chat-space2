.chatmain
  = render partial:'common/chatside', locals: { group: @group }
  .chat-header
    .chat-header--left
      %p.chat-header--left__name
        = @group.name
      %p.chat-header--left__member
        Members:
        = @group.users.pluck(:name).join(",  ")
    .chat-header--right
      = link_to 'Edit', edit_group_path(@group)
  %ul.chat-main-message
    =render @messages
  .chat-footer-input
  = form_for [ @group, @message ] do |f|
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        = f.text_area :body, placefolder: "Type a message"
      .chat-group-form__field__center
      %i.fa.fa-image
      .chat-group-form__field--right
        = f.submit "Send"

