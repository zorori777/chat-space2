.chatmain
  = render partial:'chatside', locals: { groups: @groups }
  .chat-header
    .chat-header--left
      %p.chat-header--left__name
        = @group.name
      %p.chat-header--left__member
        Members:
        = @group.users.pluck(:name).join(",  ")
    .chat-header--right
      = link_to 'Edit', edit_group_path(@group)
  .chat-main-message
    =render @messages
  .chat-footer-input
  = form_for [ @group, @message ] do |f|
    .chat-footer-input__left
      = f.text_area :body, placefolder: "Type a message"
    .chat-footer-input__center
      %i.fa.fa-image
    .chat-footer-input__right
      = f.submit value: "Send", name: "commit", disable: "save"

    /   %textarea{ placeholder:"Type a message" }

    /   %i.fa.fa-image
    / .chat-footer-input__right
    /   %input{ type:"submit" , placeholder: "type a text", value: "send" }
