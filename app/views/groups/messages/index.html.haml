.chatmain
  = render partial:'common/chatside', locals: { group: @group }
  .chat-header
    .chat-header--left
      %p.chat-header--left__name
        = @group.name
      %p.chat-header--left__member
        Members:
        = @group.users.pluck(:name).join(",  ")
    .chat-header--right
      = link_to 'Edit', edit_group_path(@group)
  %ul.chat-main-message
    = render @messages
  .chat-main-input
  = form_for [@group, @message] do |f|
    .chat-main-input__left
      = f.text_field :body, class: 'chat-main-input__left', placeholder: 'Type a message'
    .chat-main-input__center
      = fa_icon 'picture-o', class: 'center_tag'
    .chat-main-input__right
      = f.submit '送信', class: 'chat-main-input__right'




