.chat-side
  .chat-side-user
    .chat-side-user-left
      %h2= current_user.name
    .chat-side-user-right
      = link_to edit_user_path(current_user), class: "chat-side-user-right" do
        %i.fa.fa-cog
      = link_to new_group_path(@group),class: "chat-side-user-right" do
        %i.fa.fa-pencil-square-o
  .chat-side-group
    %p チーム
    %ul
      %li
        %p.chat-side-group__name gogo
        %p.chat-side-group__message ようこそ
      %li
        %p.chat-side-group__name yari
        %p.chat-side-group__message mama
      %li
        %p.chat-side-group__name papa
        %p.chat-side-group__message tasukete
